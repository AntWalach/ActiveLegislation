    = render "left_menu_link", icon: "user", text: User.model_name.human(count: 2), url: users_path, active: params[:action] == "index" && params[:controller] == "users"
    = render "left_menu_link", icon: "user-edit", text: Official.model_name.human(count: 2), url: index_officials_users_path, active: params[:action] == "index_officials" && params[:controller] == "users"
