    = render "left_menu_link", icon: "building", text: Department.model_name.human(count: 2), url: departments_path, active:  params[:controller] == "departments"
    = render "left_menu_link", icon: "chart-bar", text: "Statistics", url: admin_reports_path, active:  params[:controller] == "reports"

