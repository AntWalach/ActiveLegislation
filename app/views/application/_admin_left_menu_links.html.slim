ul
    = render "left_menu_link", icon: "home", text: "Dashboard", url: authenticated_root_path, active:["dashboard"].include?(params[:action])
    = render "left_menu_link", icon: "file-signature", text: Petition.model_name.human(count: 2), url: admin_petitions_path, active: params[:controller] == "petitions"
